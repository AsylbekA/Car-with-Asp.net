@using OnlineStore.Models
@model Team
@{
    Layout = "~/Views/Shared/_LayoutFootball.cshtml";
}

<div>
    <h4>Команда @Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Coach)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coach)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Players)
        </dt>
        <dd>
            <ul>
                @foreach (Player player in Model.Players)
                {
                    <li>
                        @player.Name (@player.Position)
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditTeam", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

